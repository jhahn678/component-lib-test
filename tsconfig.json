{
  "compilerOptions": {
    "allowJs": true,                            
    "esModuleInterop": true, 
    "jsx": "react-native",
    "lib": ["DOM","ESNext"],
    "moduleResolution": "node",
    "noEmit": false,                            // Must be false to allow tsc output
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES6",
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "lib",
    "noImplicitAny": false
  },
  "include": ["src/**/*"],                  // tsc will build from stories directory
  "exclude": [
    "src/**/*.stories.tsx",                 // tsc will exclude all .stories files
    "src/**/*.stories.ts",
  ]
}
