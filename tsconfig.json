{
  "compilerOptions": {
    "allowJs": true,                            
    "esModuleInterop": true, 
    "jsx": "react-native",
    "lib": ["DOM","ESNext"],
    "moduleResolution": "node",
    "noEmit": false,                            // Must be false to allow tsc output
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext"
  },
  "include": ["stories/**/*"],                  // tsc will build from stories directory
  "exclude": [
    "stories/**/*.stories.tsx",                 // tsc will exclude all .stories files
    "stories/**/*.stories.ts",
  ]
}
