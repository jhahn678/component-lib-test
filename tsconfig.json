{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "jsx": "react-native",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "moduleResolution": "node",
    "noEmit": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES6",
    "declaration": true,
    "declarationMap": true,
    "noImplicitAny": false,
    "paths": {
      "react": ["./node_modules/@types/react"],
      "react-native": ["./node_modules/@types/react-native"],
      "assets": ["./src/assets"]
    }
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "src/**/*.stories.tsx",
    "src/**/*.stories.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.tsx",
  ],
  "extends": "expo/tsconfig.base"
}
